<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/notelayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="7dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="7dp"
    android:elevation="0dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="7dp"
    app:cardBackgroundColor="#fbfbfb"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">
    <ImageView
        android:id="@+id/backgroundImage"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linear"
            android:padding="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="#bababa"
                android:gravity="top"
                android:layout_gravity="bottom"
                android:id="@+id/note_Timestamp_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:fontFamily="@font/lexend"/>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/note_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:fontFamily="@font/lexend"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/black"
                android:ellipsize="end"
                android:id="@+id/note_content_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:fontFamily="@font/lexend"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bellnote"
            android:visibility="gone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/bell_note"
            android:layout_toLeftOf="@+id/voice"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/gallery_home"/>
        <ImageView
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_toLeftOf="@+id/gallery"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/gallery"
            app:srcCompat="@drawable/micnote"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
