<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/play"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/play_rec"
                android:layout_marginStart="16dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:id="@+id/txtstarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:layout_toRightOf="@+id/play"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lexend"
                android:layout_marginStart="4dp"/>
            <SeekBar
                android:layout_gravity="center_vertical"
                android:id="@+id/seekbar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:progressBackgroundTint="@color/seek"
                android:backgroundTint="@color/seek"
                android:thumbTint="@color/seek"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:id="@+id/txtTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_toRightOf="@+id/seekbar"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lexend"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.aghajari.emojiview.view.AXEmojiEditText
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/recordingedittxt"
        android:background="@drawable/edit_txt"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/type_something"
        android:minLines="1"
        android:layout_below="@+id/layoutcon"
        android:fontFamily="@font/lexend"/>
</LinearLayout>
